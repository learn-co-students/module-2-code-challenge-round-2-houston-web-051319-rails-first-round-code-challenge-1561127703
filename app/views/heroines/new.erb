<h1>Create Heroine</h1>
<form method = "POST" action ="/heroines">
    <%=hidden_field_tag :authenticity_token, form_authenticity_token%>
    <div>
        <label>Name</label>
        <input type="text" name="hero[name]">
    </div>
    <div>
         <label> SuperName</label>
        <input type="text" name="hero[super_name]">
    </div>
     <div>
        <label>Power</label>
        <select name="hero[power_id]">
            <%@powers.each do |power|%>
                <option value="<%=power.id%>" ><%=power.name%></option>
            <%end%>
        </select>
    </div>
    <div>
        <input type="submit" value="submit">
    </div>
</form>
